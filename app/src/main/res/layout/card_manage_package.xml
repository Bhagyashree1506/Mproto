<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="package Name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/package_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="package description"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/package_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="package price"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/package_service_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="service price"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/package_validity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="service price"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/package_vehicle_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="vehicle count"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/checklist"
            android:src="@drawable/ic_brand"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/checklist"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/ic_list"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/checklist"
            android:src="@drawable/ic_rupee"
            app:tint="@color/black" />


    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>